<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" />

    <style name="background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Main Activity -->

    <style name="start_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawableEnd">@drawable/right_arrow_white</item>
        <item name="android:drawableRight">@drawable/right_arrow_white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Game Activity -->

    <style name="game_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">User VS Computer</item>
        <item name="android:layout_margin">15sp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="game_action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="user_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/user_name</item>
        <item name="android:layout_margin">3sp</item>
    </style>
    
    <style name="opponent_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/opponent_name</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="player_money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/user_money</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="opponent_money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/opponent_money</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="player_bet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/bet_text</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="player_bet_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/player_bet_value</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="opponent_bet_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/opponent_bet_value</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="ranking">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="game_card">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:src">@drawable/card_back</item>
    </style>

    <style name="game_summary_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingRight">20sp</item>
        <item name="android:background">@drawable/game_summary</item>
    </style>

    <style name="game_summary_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="seekbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:max">500</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="input_money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/game_summary</item>
        <item name="android:layout_above">@+id/seekBar</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:maxWidth">80dp</item>
        <item name="android:text">@string/input_money_value</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="game_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/game_button</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="pot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="dealer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:src">@drawable/dealer</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="odds">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>

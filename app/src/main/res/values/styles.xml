<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" />

    <style name="background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Main Activity -->

    <style name="start_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawableEnd">@drawable/right_arrow_white</item>
        <item name="android:drawableRight">@drawable/right_arrow_white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Game Activity -->

    <style name="game_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">User VS Computer</item>
        <item name="android:layout_margin">15sp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="game_action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">User makes call with 100.0</item>
        <item name="android:layout_margin">15sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="user_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/user_name</item>
        <item name="android:layout_margin">3sp</item>
    </style>
    
    <style name="opponent_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/opponent_name</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="user_money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/user_money</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="opponent_money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/opponent_money</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="player_bet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/bet_text</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="user_bet_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/opponent_bet_value</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="opponent_bet_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/opponent_bet_value</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="game_card">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:src">@drawable/card_back</item>
        <item name="android:layout_margin">3sp</item>
    </style>

    <style name="game_summary_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingRight">20sp</item>
        <item name="android:background">@drawable/game_summary</item>
    </style>

    <style name="game_summary_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/summary_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
